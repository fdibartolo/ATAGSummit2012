<h1>My Articles</h1>

<%= link_to 'Create New Article', new_article_path, :class => "button round" %>

<% @articles.each do |article| %>
	<div class="formatted_article round">
		<p id="date"><%= article.created_at.strftime("%A, %h %d %Y, %H:%M hs") %></p>
		<p id="title"><%= article.title %></p>
		<p><%= article.body %></p><br />
    <p id="actions"><%= link_to 'Show', article, :class => "small_button round"%> |
		<%= link_to 'Edit', edit_article_path(article), :class => "small_button round" %> |
    <%= link_to 'Delete', article, confirm: 'Are you sure?', method: :delete, :class => "small_button round" %></p>
	</div>
<% end %>

